@for ( int i= 0; i <= 5;i ++)
{
    <b>Vòng lặp thứ  @i</b><br>

}


<!-- Cấu trúc While-->
<!-- ////////////////////////////////////////////////////////////////-->
@{
    List<string> menus = new List<string>()
    {
        "Trang chu","San Pham","Gioi thieu","Lien he"
    };
    int j = 0;
}
<div class="container-fluid">
    <nav class="navbar navbar-expand-md bg-black">
        <ul class="navbar-nav">
            @while (j < menus.Count)
            {
                <li class="nav-item">
                    <a class="nav-link">@menus[j]</a>
                </li>
                j++;
            }

        </ul>
    </nav>
</div>



<!-- Cấu trúc Foreach-->
<!-- ////////////////////////////////////////////////////////////////-->
@{
    List<string> flows = new List<string>()
    {
        "lan",
        "hoa",
        "Dao"
    };
}
@foreach (var item in flows)
{
    <p class="alert  alert-danger text-black-50">Flow: @item</p>
}

