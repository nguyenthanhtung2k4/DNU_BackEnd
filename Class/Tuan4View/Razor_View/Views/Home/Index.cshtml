    string name="Nguyen thanh tung";
    string role = "admin";

}

<h4>Hom nay la : @today</h4>
<h1>Xin chao  @name</h1>
@if (@role == "admin"){
    <p  class="alert-black text-white"> ban co quyen quan ly he thong</p>

}
else
{
    <p class="alert-danger text-blue"> ban la nguoi dung</p>
}
